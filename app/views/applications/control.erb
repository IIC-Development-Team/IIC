<h1>Applications control panel</h1> <br>


<% if user_signed_in? %>
 
    <div class="container">
        No. of records:  <%= @applications.count %> <br>
        Title of last record: <%= @applications.last.title %> <br>
        Creation of last record: <%= @applications.last.created_at %> <br>

        <hr>
            <%= link_to "Create new record", new_application_url, class: 'link-app', style: 'font-size: 150%' %> <br>
        <hr>

        <div id="applications" style="width: 100%">
            <% @applications.each_slice(3) do |applications| %>
                <%- applications.each do |application| %>
                    <div class="app">
                        <div class="app-left">
                            <%= image_tag application.img, class:"image"%>
                        </div>
                        <div class="app-right">
                            <strong class="author"><%= link_to application.title, application, class: 'link-app' %></strong><br>
                            <div class="mobile-hide"><%= application.author %><br></div>
                            <%= application.rd %><br>
                            Status: 
                            <% if application.cs == true %>
                            <span style="color: green"><strong> Cracked </strong></span>
                            <%else%>
                            <span style="color: red"><strong> Not cracked yet </strong></span>
                            <%end%><br>
                            <div class="mobile-hide">Crack: <%= application.ca %></div>
                        </div>
                    </div>
                <%end%>
            <%end%>
        </div>
<%else%>
    <div class="container">
        Your are currently not logged into Administrator accout.
        Only Administrator accounts can acces these pages. <br>

        <%= link_to "Log in", new_user_session_url, class: 'link-app' %>
    </div>
<%end%>