<%= form_tag(search_path, :method => "get") do %>
  <div class="input-group">
    <%= search_field_tag :search, params[:search], placeholder: "Title ", class: "form-control" %>
    <div class="input-group-button">
      <%= button_tag "Search for application", :class => 'btn btn-info glyphicon glyphicon-search', :title => nil %>
    </div>
  </div>
<% end %>

<h3>Search results</h3>

  <% @results.each_slice(3) do |result| %>
    <%- result.each_slice(3) do |application| %> <br>
      <%= render application %>
    <% end %>
  <% end %>