<%= form_tag(search_path, :method => "get") do %>
  <div class="container">
    <%= search_field_tag :search, params[:search], placeholder: "Title ", class: "form-control" %>
    <div>
      <%= button_tag "Search for application", :class => 'button  ', :title => nil %>
    </div>
  </div>
<% end %>

<div class="container">
  <h1>Search results</h1>
</div>

  <% @results.each_slice(3) do |result| %>
    <%- result.each_slice(3) do |application| %> <br>
      <%= render application %>
    <% end %>
  <% end %>