
  <p style="color: green"><%= notice %></p>

  <h1 class="container">Applications</h1>

  <div id="applications">
    <% @applications.each do |application| %>
      <%= render application %>
      <p class="show">
        <%= link_to "Show this application", application, class:"link" %>
      </p>
    <% end %>
  </div> 
  <% if user_signed_in? %> <!-- ONLY SIGNED USERS CAN ADD APPLICATIONS! -->
  <div  class="container">
  <%= link_to "New application", new_application_path, class:"link" %>
  </div>
  <% end %>
