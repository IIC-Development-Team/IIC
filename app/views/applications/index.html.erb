<p style="color: green"><%= notice %></p>

<h1>Applications</h1>

<div id="applications">
  <% @applications.each do |application| %>
    <%= render application %>
    <p>
      <%= link_to "Show this application", application %>
    </p>
  <% end %>
</div>
<% if user_signed_in? %> <!-- ONLY SIGNED USERS CAN ADD APPLICATIONS! -->
<%= link_to "New application", new_application_path %>
<% end %>