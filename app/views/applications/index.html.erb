
  <p style="color: green"><%= notice %></p>

  <h1 class="apps">Applications</h1> <br>

  <%= form_tag(search_path, :method => "get") do %>
    <div class="container">
      <%= search_field_tag :search, params[:search], placeholder: "Title ", class: "form-control" %>
      <div class="input-group-button">
        <%= button_tag "Search for application", :class => 'button', :title => nil %>
      </div>
    </div>
  <% end %>

  <div id="applications">
    <% @applications.each_slice(3) do |applications| %>
          <%- applications.each do |application| %>
            <%= render application%>
          <%end%>
    <% end %>
  </div> 
  <% if user_signed_in? %> <!-- ONLY SIGNED USERS CAN ADD APPLICATIONS! -->
  <div  class="container">
  <%= link_to "New application", new_application_path, class:"link" %>
  </div>
  <% end %>
