
  <p style="color: green"><%= notice %></p>

  <h1 class="apps">Applications</h1> <br>

  <%= form_tag(search_path, :method => "get") do %>
    <div class="input-group">
      <%= search_field_tag :search, params[:search], placeholder: "Title ", class: "form-control" %>
      <%= button_tag "Search for application", :class => 'btn btn-info glyphicon glyphicon-search', :title => nil %>
    </div>
  <% end %>

  <div id="applications">
    <% @applications.each_slice(3) do |applications| %>
          <%- applications.each do |application| %>
            <div class="app">
              <%= application.title%> | <%= link_to "Show details", application, class: 'link-app' %>
            </div>
          <%end%>
    <%end%>
  </div>