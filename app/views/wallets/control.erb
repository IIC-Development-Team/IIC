<h1>Applications control panel</h1> <br>


<% if user_signed_in? %>
 
    <div class="container">
        No. of records:  <%= @wallets.count %> <br>
        Title of last record: <%= @wallets.last.coin_ico %> <br>
        Creation of last record: <%= @wallets.last.created_at %> <br>

        <hr>
            <%= link_to "Create new record", new_wallet_url, class: 'link-app', style: 'font-size: 150%' %> <br>
        <hr>

        <div id="applications">
            <% @wallets.each_slice(3) do |wallets| %>
                <%- wallets.each do |wallet| %>
                    <div class="app">
                        <%= wallet.coin_ico %> | <%= link_to "Show details", wallet, class: 'link-app'%>
                    </div>
                <%end%>
            <%end%>
        </div>
<%else%>
    <div class="container">
        Your are currently not logged into Administrator accout.
        Only Administrator accounts can acces these pages. <br>

        <%= link_to "Log in", new_user_session_url, class: 'link-app' %>
    </div>
<%end%>